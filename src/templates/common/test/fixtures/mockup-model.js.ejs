import mongoose from 'mongoose'

export interface Mockup extends mongoose.Document {
  email: string,
  password: string
}

const mockupSchema = new mongoose.Schema({
  email: {
    type: String,
    unique: true,
    match: /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/,
    required: true
  },
  password: {
    type: String,
    select: false,
    required: true
  }
})

export const Mockup = mongoose.model<Mockup>('Mockup', mockupSchema)
